<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="logs/internal-nlog-OrderService.txt">

  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- Define variables -->
  <variable name="serviceName" value="OrderService"/>

  <!-- Define targets -->
  <targets>
    <!-- Console target with colored output -->
    <target xsi:type="Console" name="console"
            layout="${longdate}|${level:uppercase=true}|${serviceName}|${mdlc:item=CorrelationId}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File target for all logs -->
    <target xsi:type="File" name="allfile"
            fileName="logs/${serviceName}-all-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${serviceName}|${mdlc:item=CorrelationId}|${logger}|${message} ${exception:format=tostring}" />

    <!-- File target for own logs -->
    <target xsi:type="File" name="ownFile-web"
            fileName="logs/${serviceName}-own-${shortdate}.log"
            layout="${longdate}|${level:uppercase=true}|${serviceName}|${mdlc:item=CorrelationId}|${logger}|${message} ${exception:format=tostring}" />

    <!-- JSON file target for structured logging -->
    <target xsi:type="File" name="jsonFile"
            fileName="logs/${serviceName}-${shortdate}.json">
      <layout xsi:type="JsonLayout" includeAllProperties="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="service" layout="${serviceName}"/>
        <attribute name="correlationId" layout="${mdlc:item=CorrelationId}"/>
        <attribute name="logger" layout="${logger}"/>
        <attribute name="message" layout="${message}" />
        <attribute name="exception" layout="${exception:format=tostring}" />
        <attribute name="url" layout="${aspnet-request-url:IncludeHost=true:IncludePort=true:IncludeQueryString=true}"/>
        <attribute name="action" layout="${aspnet-mvc-action}"/>
      </layout>
    </target>
  </targets>

  <!-- Define rules -->
  <rules>
    <!-- Skip non-critical Microsoft logs -->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
    <logger name="System.Net.Http.*" maxlevel="Info" final="true" />
    
    <!-- Skip HTTP middleware logs from console (too verbose for HTTP requests) -->
    <logger name="Shared.Middlewares.*" maxlevel="Debug" final="true" />
    
    <!-- KEEP MassTransit filter logs - needed for event tracking -->
    <!-- <logger name="Shared.Filters.*" maxlevel="Debug" final="true" /> -->

    <!-- All logs to console (Info and above for cleaner output) -->
    <logger name="*" minlevel="Info" writeTo="console" />

    <!-- All logs to file -->
    <logger name="*" minlevel="Debug" writeTo="allfile" />

    <!-- Own logs to own file -->
    <logger name="OrderService.*" minlevel="Trace" writeTo="ownFile-web" />

    <!-- All logs to JSON file -->
    <logger name="*" minlevel="Debug" writeTo="jsonFile" />
  </rules>
</nlog>
